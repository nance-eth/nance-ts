{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "alwaysStrict": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src/**/*",
    "src/config/**/*.json",
    "test/**/*",
    "jest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "scripts"]
}
