{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "alwaysStrict": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "src/config/**/*.json"
  ],
  "exclude": ["node_modules"]
}
